#include <iostream>
using namespace std;
int main()
{
    int onlyNum;

    cout << "~~~~~~~~~~~~~~~~~~~~~~~~~\n";
    cout << "Factorial cal-cu-malaytor\n";
    cout << "~~~~~~~~~~~~~~~~~~~~~~~~~~\n\n";

    cout << "Enter a integer\n";
    cout << ">> ";
    cin >> onlyNum;
    int Errgh = onlyNum;
    for (int i = onlyNum - 1; i >= 1; i--) {
       onlyNum = onlyNum * i;
    }
    cout << Errgh << "! = " << onlyNum;
    return 0;
}

