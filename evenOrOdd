#include <iostream>
using namespace std;
int main()
{
    int n;
    cout << "Enter a number and I'll determine if it's even or odd!\n";
    cout << ">> ", cin >> n;

    if (n % 2 == 0) { // % determines a remainder. If the remainder is 0, it is even, if not, it is odd.
        cout << "number is even!\n";
    }
    else {
        cout << "number is odd!\n";
    }

}

