#include <iostream>
#include <string>
using namespace std;

int main() {
    string input;
    cout << "Dice Roll Generator\n\n";

    cout << "enter dice in xdy form to roll (0d0 = stop program)\n";
    cout << ">> ";
    getline(cin, input); // User enters xdy form

    int diceAmount;
    int diceType;
    int rollTotal;

    srand((int)time(0));

    for (int i = 0; i < diceAmount; i++) {
        int s = rand() % i + 1;
        cout << "You rolled: " << i << ", \n";
        rollTotal = s;

    }
    cout << "Total amount rolled: " << rollTotal << endl;

    return 0;
}
