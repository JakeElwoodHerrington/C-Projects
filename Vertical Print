#include <iostream>
#include <string>
using namespace std;


void verticalPrint(string s) {
    int n = s.length();
    for (int i = 0; i < n; i++) {
        cout << s[i] << endl;;
    }
}

string reverse(string s) {

    return s;
}

int main()
{
    string input;
    cout << "Vertical Print & Reversal Program\n\n";
    cout << "Enter a string of words\n";
    cout << ">> ";
    getline(cin, input);

    cout << "Vertical Print\n\n";
    verticalPrint(input);
    cout << endl << endl;

    cout << "Reverse Print\n";


}

