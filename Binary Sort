#include <iostream>
#include <fstream>
#include <string>

using namespace std;

int binarySearch(string a[], string s, int size) {
	int start = 0;
	int end = size - 1;

	while(start <= end) {
		int mid = (start + end) / 2;
		if (s.compare(a[mid]) == 0) {
			return mid;
		}
		else {
			if (s.compare(a[mid]) < 0) {
				end = mid - 1;
			}
			else {  // SO MANY IF ELSES >:C
				if (s.compare(a[mid]) > 0) {
					start = mid + 1;
				}
			}
		}
	}
	return -1;
}


void insertionSort(string a[]) {
	for (int i = 1; i < 46; i++) {
		for (int j = i; j > 0 && a[j].compare(a[j - 1]) < 0; j--) { // It took so long to figure that error out.
			string temp = a[j];
			a[j] = a[j - 1];
			a[j - 1] = temp;
		}
	}
}

int main()
{
	string presidents[46];
	ifstream fin;
	ofstream fout;
	fin.open("presidents.txt");
	fout.open("presidents_sorted.txt");
	for (int i = 0; i < 46; i++) {
		getline(fin, presidents[i]);
	}
	insertionSort(presidents);
	for (int i = 0; i < 46; i++) {
		fout << presidents[i] << endl;
	}
	// Query user for a search and stores in string
	string searchQue;
	cout << "Enter what you are searching for:\n";
	cout << ">> ";
	cin >> searchQue;
	binarySearch(presidents, searchQue, 46);

	cout << binarySearch;

	return 0;
}

